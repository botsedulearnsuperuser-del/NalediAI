{
  "expo": {
    "name": "Naledi AI",
    "slug": "naledi-ai",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/newimages/applogo.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splashscreen.png",
      "resizeMode": "contain",
      "backgroundColor": "#1B1B1B"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.tsamaya.app",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "TSAMAYA needs access to your photo library to upload images.",
        "NSCameraUsageDescription": "TSAMAYA needs access to your camera to scan QR codes for payments.",
        "NSMicrophoneUsageDescription": "TSAMAYA needs access to your microphone for voice interactions.",
        "NSSpeechRecognitionUsageDescription": "TSAMAYA uses speech recognition for voice input."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#1B1B1B"
      },
      "package": "com.tsamaya.app",
      "permissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_MEDIA_IMAGES"
      ]
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "color": "#6366F1",
          "mode": "production"
        }
      ]
    ],
    "notification": {
      "color": "#6366F1",
      "iosDisplayInForeground": true,
      "androidMode": "default"
    },
    "extra": {
      "eas": {
        "projectId": "41843d18-4156-4b0b-9c45-30d320d35a71"
      }
    }
  }
}